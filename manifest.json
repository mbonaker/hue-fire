{
  "manifest_version": 3,
  "name": "Hue Fire",
  "version": "0.2.0",

  "description": "Adds a color picker that can work with HCL",

  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "96": "icon-96.png",
    "128": "icon-128.png",
    "512": "icon-512.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "erifeuh@m.softwar3.com",
      "strict_min_version": "85.0"
    }
  },
  "action": {
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "96": "icon-96.png",
      "128": "icon-128.png",
      "512": "icon-512.png"
    },
    "default_title": "Hue Fire",
    "browser_style": true,
    "default_popup": "/popup/color-picker.html"
  },
  "permissions": ["storage", "contextMenus"]
}
